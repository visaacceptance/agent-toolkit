{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "baseUrl": ".",
    "composite": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "../typescript/src/shared/*": ["../typescript/src/shared/*"]
    },
    "sourceMap": true
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "references": [
    { "path": "../typescript" }
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}